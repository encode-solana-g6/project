---
import { ClientRouter } from "astro:transitions";
import { css } from "../../styled-system/css";
import WalletProviderComponent from "../components/Connect";
import Navbar from "../components/Navbar.astro";
import "../styles/globals.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Solana tools</title>
  </head>
  <body class={css({ height: "100vh", margin: "0" })}>
    <ClientRouter/>
    <WalletProviderComponent client:only transition:persist>
      <div class={css({ display: "flex", height: "100%" })}>
        <Navbar />
        <main class={css({ flexGrow: "1", p: "4", overflowY: "auto" })}>
          <slot />
        </main>
      </div>
    </WalletProviderComponent>
  </body>
</html>
